/* pages/problem/problem.wxss */
text{
  color: #fff;
}
.fight-back{
  height: 100vh;
}
.content{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.left,
.right{
  width: 250rpx;
  height: 100%;
  /* border: 1px solid #000; */
  float: left;
}
.number,
.line{
  position: absolute;
  top: 160rpx;
  left: 100rpx;
  font-size: 100rxp;
  font-weight: bold;
  opacity: 0;
}
.line{
  left: 95rpx;
}
.middle{
  width: calc(100% - 500rpx);
  height: 100%;
  /* border: 1px solid #f00; */
  float: left;
  display: flex;
  justify-content:center; 
}
.middle-top{
  position: absolute;
  top: 500rpx;
  width: 180rpx;
  height: 180rpx;
  border: 35rpx solid #f00;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* transform: all .5s; */
}
.middle-top text,
.hastime{
  position: absolute;
  font-size: 60rpx;  /*60*/
  font-weight: bolder;
}
.hastime{
  opacity: 0;
}
.num-line{
  position: relative;
  top: 200rpx;
  height: 200rpx;
  width: 250rpx; /*150*/
  /* border: 1px solid #fff; */
}
.brain-line{
  position: absolute;
  /* top: 250rpx; */
  width: 250rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, .3);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.brain-line text,
.right-brain-line text{
  position: absolute;
  z-index: 99;
  font-size: 30rpx;
}
.brain{
  position: absolute;
  top: 0;
  left: 125rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  z-index: 9;
}
.title{
  opacity: 0;
}
.title-name,
.title-problems{
  position: absolute;
  top: 300rpx;
  left: 160rpx;
  width:  calc(100% - 320rpx);
  /* border: 1px solid #000; */
  display: flex;
  justify-content: center;
}
.title-name text{
  font-size: 50rpx;
  font-weight: bolder;
}
.title-problems{
  top: 420rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  /* border: 1px solid #000; */
}
.title-problems text{
  font-size: 38rpx;
  text-align: center;
}
.athor-name{
  position: absolute;
  top: 550rpx;
  left: 160rpx;
  /* height: 400rpx; */
  width: calc(100% - 320rpx);
  /* border: 1px solid #000; */
}
.named{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}
.named text{
  font-size: 40rpx;
  font-weight: bold;
  color: #333399;
}
.other{
  position: absolute;
  bottom: 0rpx;
  width: 250rpx;
  height: 200rpx;/*150*/
  /* border: 1px solid #000; */
}
.right-brain-line{
  position: absolute;
  top: 0;
  right: 0;
  width: 250rpx;/*150*/
  height: 200rpx;/*140*/
  background: rgba(255, 255, 255, .3);
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.right-brain{
  position: absolute;
  top: 0;
  right: 125rpx;
  width: 200rpx;/*140*/
  height: 200rpx;/*140*/
  border-radius: 50%;
  z-index: 9;
}
.right-number,
.right-line{
  position: absolute;
  bottom: 190rpx;
  right: 100rpx;
  font-size: 100rxp;
  font-weight: bold;
  opacity: 0;
}
.right-line{
  right: 95rpx;
}
.pos-project{
  display: flex;
  justify-content: center;
}
.project{
  position: absolute;
  top: 370rpx;
  color: #f00;
  font-size: 30rpx;
}