/* pages/login/login.wxss */
page{
  background: #4b4bfc;
}
.all{
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.content{
  height: 1000rpx;
}
.content image{
  display: block;
  width: 100%;
  margin-top: -100rpx;
  height: 1400rpx;
  overflow: hidden;
  z-index: 1;
}
.content-pic{
  position: absolute;
  top: 250rpx;
  left: 125rpx;
  width: 500rpx;
  z-index: 10;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.pice{
  position: relative;
  height: 220rpx;
  width: 150rpx;
  margin: 10rpx 0;
}
.title{
  font-size: 10px;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  border-radius: 3px;
  color: #fff;
  background: #4b4bfc;
  display: flex;
  justify-content: center;
}
.middle{
  display: flex;
  justify-content: center;
  /* border: 1px solid #f00; */
}
.middle image{
  margin-top: 10rpx;
  display: block;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.pice-bottom text{
  color: #ff3333;
  display: flex;
  justify-content: center;
  font-weight: bolder;
}
/* .one{
  opacity: 0.7;
} */
.bottom{
  position: absolute;
  bottom: 50rpx;
  margin: 0 auto;
  width: 100%;
}
.btn{
  width: 400rpx;
  line-height: 100rpx;
  color: #fff;
  font-size: 60rpx;
  background: #66ff33;
}
.logined{
  position: absolute;
  left: calc(50% - 350rpx);
  top: calc(50% - 300rpx);
  width: 700rpx;
  height: 600rpx;
  transition: all .3s linear;
  transform: scale(0,0);
  z-index: 20;
}
.login-in{
  width: 100%;
  height: 150rpx;
  position: relative;
  z-index: 999;
}
.login-back{
  position: absolute;
  top: 120rpx;
  height: 480rpx;
  width: 100%;
  border-radius: 10rpx;
  background: rgb(255, 243, 209);
  z-index: 99;
  box-shadow: 5px 5px 10px #000 ;
  /* border: 1px solid #000; */
}
.login-title,
.login-big{
  margin: 50rpx 0 0 0;
  display: flex;
  justify-content: center;
  font-size: 50rpx;
  font-weight: bolder;
  color: #ff3333;
}
.login-content{
  height: 200rpx;
  margin-top: 50rpx;
  /* border: 1px solid #f00; */
  display: flex;
  justify-content: center;
  align-items: center;
}
.login-pic{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}
.login-big{
   float: left;
   margin: 0 40rpx 0 0;
}
.login-bottom{
  margin-top: -10rpx;
}